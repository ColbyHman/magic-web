.deckBuilder {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  color: #fff;
  overflow: hidden;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 24px;
  color: rgba(255, 255, 255, 0.6);
}

.header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background: rgba(0, 0, 0, 0.3);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px 8px 0 0;
  flex-shrink: 0;
}

.backBtn {
  padding: 8px 16px;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6px;
  color: #fff;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease;
}

.backBtn:hover {
  background: rgba(255, 255, 255, 0.15);
  transform: translateX(-2px);
}

.deckNameInput {
  flex: 1;
  padding: 8px 12px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 6px;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
}

.deckNameInput:focus {
  outline: none;
  border-color: rgba(100, 150, 255, 0.5);
  background: rgba(255, 255, 255, 0.08);
}

.formatSelect {
  padding: 8px 12px;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6px;
  color: #fff;
  font-size: 14px;
  cursor: pointer;
}

.formatSelect:focus {
  outline: none;
  border-color: rgba(100, 150, 255, 0.5);
}

.content {
  display: flex;
  gap: 20px;
  flex: 1;
  overflow: hidden;
}

.validationPanel {
  margin-bottom: 16px;
  background: rgba(255, 200, 0, 0.1);
  border: 1px solid rgba(255, 200, 0, 0.3);
  border-radius: 8px;
  overflow: hidden;
}

.validationHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  cursor: pointer;
  font-weight: 600;
  color: #ffc800;
  user-select: none;
}

.validationHeader:hover {
  background: rgba(255, 200, 0, 0.05);
}

.toggleBtn {
  background: none;
  border: none;
  color: #ffc800;
  font-size: 12px;
  cursor: pointer;
}

.validationContent {
  padding: 0 16px 12px;
}

.validationWarning {
  margin-bottom: 12px;
}

.validationWarning:last-child {
  margin-bottom: 0;
}

.warningMessage {
  font-size: 14px;
  color: #ffd700;
  margin-bottom: 6px;
}

.warningCards {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-left: 16px;
}

.warningCard {
  padding: 4px 8px;
  background: rgba(255, 200, 0, 0.2);
  border-radius: 4px;
  font-size: 12px;
  color: #fff;
}

.leftSection {
  flex: 2;
  display: flex;
  flex-direction: column;
  gap: 0;
  overflow: hidden;
}

.leftSection {
  flex: 2;
  display: flex;
  flex-direction: column;
  gap: 0;
  overflow: hidden;
}

.leftPanel {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20px;
  overflow-y: auto;
  padding: 20px 16px;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 0 0 8px 8px;
}

.leftPanel::-webkit-scrollbar {
  width: 8px;
}

.leftPanel::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
}

.leftPanel::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4px;
}

.leftPanel::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

.rightPanel {
  flex: 1;
  overflow-y: auto;
}

.rightPanel::-webkit-scrollbar {
  width: 8px;
}

.rightPanel::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
}

.rightPanel::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4px;
}

.addCardSection {
  margin-bottom: 8px;
}

.addCardForm {
  display: flex;
  gap: 8px;
}

.searchInput {
  flex: 1;
  padding: 10px 12px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6px;
  color: #fff;
  font-size: 14px;
}

.searchInput:focus {
  outline: none;
  border-color: rgba(100, 150, 255, 0.5);
  background: rgba(255, 255, 255, 0.08);
}

.searchInput:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.addBtn {
  padding: 10px 20px;
  background: rgba(100, 200, 100, 0.3);
  border: 1px solid rgba(100, 200, 100, 0.5);
  border-radius: 6px;
  color: #6cf76c;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  min-width: 80px;
}

.addBtn:hover:not(:disabled) {
  background: rgba(100, 200, 100, 0.4);
}

.addBtn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.searchBtn {
  padding: 10px 20px;
  background: rgba(100, 150, 255, 0.3);
  border: 1px solid rgba(100, 150, 255, 0.5);
  border-radius: 6px;
  color: #6cb4ff;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.searchBtn:hover {
  background: rgba(100, 150, 255, 0.4);
}

.section {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 16px;
}

.sectionTitle {
  margin: 0 0 12px 0;
  font-size: 16px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  padding-bottom: 8px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.cardList {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.emptyMessage {
  padding: 24px;
  text-align: center;
  color: rgba(255, 255, 255, 0.4);
  font-style: italic;
}

.statsPanel {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 20px;
}

/* Card Preview Panel */
.previewPanel {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 20px;
  max-height: 70vh;
  overflow-y: auto;
}

.previewHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.previewTitle {
  margin: 0;
  font-size: 18px;
  font-weight: 600;
  color: #fff;
}

.closePreviewBtn {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 4px;
  color: #fff;
  font-size: 24px;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  line-height: 1;
  padding: 0;
}

.closePreviewBtn:hover {
  background: rgba(255, 100, 100, 0.3);
  border-color: rgba(255, 100, 100, 0.5);
}

.previewContent {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.previewImage {
  width: 100%;
  border-radius: 8px;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
}

.previewImage img {
  width: 100%;
  max-width: 300px;
  height: auto;
  display: block;
  border-radius: 8px;
}

.previewDetails {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.previewCardName {
  margin: 0;
  font-size: 20px;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.previewRow {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 8px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.previewLabel {
  font-size: 12px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.previewValue {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.previewText {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  white-space: pre-wrap;
}

.statsTitle {
  margin: 0 0 16px 0;
  font-size: 18px;
  font-weight: 600;
  color: #fff;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.stat {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.statLabel {
  color: rgba(255, 255, 255, 0.7);
  font-size: 14px;
}

.statValue {
  color: #fff;
  font-weight: 600;
  font-size: 14px;
}

.manaCurveSection {
  margin-top: 24px;
}

.subsectionTitle {
  margin: 0 0 12px 0;
  font-size: 14px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
}

.manaCurve {
  display: flex;
  gap: 4px;
  height: 120px;
  align-items: flex-end;
  margin-bottom: 8px;
}

.manaCurveBar {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.manaCurveFill {
  width: 100%;
  background: linear-gradient(to top, #667eea 0%, #764ba2 100%);
  border-radius: 4px 4px 0 0;
  min-height: 4px;
  transition: height 0.3s ease;
}

.manaCurveLabel {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 4px;
}

.manaCurveCount {
  position: absolute;
  bottom: 100%;
  font-size: 11px;
  color: #fff;
  font-weight: 600;
  margin-bottom: 2px;
}

.colorSection {
  margin-top: 24px;
}

.colorBars {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.colorBar {
  display: flex;
  align-items: center;
  gap: 8px;
}

.colorLabel {
  width: 30px;
  font-size: 13px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
}

.colorBarFill {
  height: 20px;
  background: linear-gradient(to right, #f093fb 0%, #f5576c 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.colorCount {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
  min-width: 24px;
  text-align: right;
}

.typeSection {
  margin-top: 24px;
}

.typeBars {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.typeBar {
  display: flex;
  justify-content: space-between;
  padding: 6px 8px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
}

.typeLabel {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.8);
}

.typeCount {
  font-size: 13px;
  font-weight: 600;
  color: #fff;
}

/* Search Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.modalContent {
  background: linear-gradient(135deg, #1e1e2e 0%, #2a2a3e 100%);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16px;
  width: 90%;
  max-width: 900px;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
}

.modalHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24px 24px 16px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.modalTitle {
  margin: 0;
  font-size: 24px;
  font-weight: 600;
  color: #fff;
}

.closeBtn {
  width: 32px;
  height: 32px;
  border: none;
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  border-radius: 6px;
  font-size: 24px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  line-height: 1;
}

.closeBtn:hover {
  background: rgba(255, 255, 255, 0.2);
}

.modalSearch {
  display: flex;
  gap: 12px;
  padding: 16px 24px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.modalSearchInput {
  flex: 1;
  padding: 12px 16px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  color: #fff;
  font-size: 14px;
}

.modalSearchInput:focus {
  outline: none;
  border-color: rgba(100, 150, 255, 0.5);
  background: rgba(255, 255, 255, 0.08);
}

.modalSearchBtn {
  padding: 12px 24px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 8px;
  color: #fff;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  min-width: 100px;
}

.modalSearchBtn:hover:not(:disabled) {
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.modalSearchBtn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.searchResults {
  flex: 1;
  overflow-y: auto;
  padding: 16px 24px;
}

.searchResults::-webkit-scrollbar {
  width: 8px;
}

.searchResults::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
}

.searchResults::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4px;
}

.searchLoading,
.noResults {
  text-align: center;
  padding: 48px 24px;
  color: rgba(255, 255, 255, 0.5);
  font-size: 16px;
}

.searchResultCard {
  display: flex;
  gap: 16px;
  padding: 12px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  margin-bottom: 12px;
  transition: all 0.2s ease;
}

.searchResultCard:hover {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.2);
}

.resultImage {
  width: 80px;
  height: 112px;
  flex-shrink: 0;
  border-radius: 6px;
  overflow: hidden;
  background: rgba(60, 60, 70, 0.5);
}

.resultImage img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.noImage {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  text-align: center;
  padding: 8px;
  color: rgba(255, 255, 255, 0.4);
}

.resultInfo {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6px;
  min-width: 0;
}

.resultName {
  font-size: 16px;
  font-weight: 600;
  color: #fff;
}

.resultType {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.6);
}

.resultMana {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
  font-family: 'Courier New', monospace;
}

.resultAddBtn {
  width: 40px;
  height: 40px;
  flex-shrink: 0;
  background: rgba(100, 200, 100, 0.3);
  border: 1px solid rgba(100, 200, 100, 0.5);
  border-radius: 8px;
  color: #6cf76c;
  font-size: 24px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.resultAddBtn:hover:not(:disabled) {
  background: rgba(100, 200, 100, 0.4);
  transform: scale(1.1);
}

.resultAddBtn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
